package com.rg.app;

import java.util.*;

public class RadixTreeNode {

	char key;
	String value;
	boolean isEnd;
	int count;
	LinkedList<RadixTreeNode> childrens;

	/* Constructor */
	public RadixTreeNode(char c) {
		childrens = new LinkedList<RadixTreeNode>();
		isEnd = false;
		key = c;
		count = 0;
	}

	public RadixTreeNode subNode(char c) {
		if (childrens != null)
			for (RadixTreeNode eachChild : childrens)
				if (eachChild.key == c)
					return eachChild;
		return null;
	}
}
