package com.rg.app;

package test;

import java.util.*;

/** TrieNode class is the backbone of Trie class */
public class RadixTreeNode {

	char key;
	String value;
	boolean isEnd;
	int count;
	LinkedList<RadixTreeNode> childList;

	/* Constructor */
	public RadixTreeNode(char c) {
		childList = new LinkedList<RadixTreeNode>();
		isEnd = false;
		key = c;
		count = 0;
	}

	public RadixTreeNode subNode(char c) {
		if (childList != null)
			for (RadixTreeNode eachChild : childList)
				if (eachChild.key == c)
					return eachChild;
		return null;
	}
}
